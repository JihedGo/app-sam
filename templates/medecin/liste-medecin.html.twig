{% extends 'dashboard/index.html.twig' %}

{% block title %}Medecins{% endblock %}

{% block content %}
  <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">MÃ©decins</h4>
                    </div>
                </div>
				<div class="row doctor-grid">
                    {% for medecin in users %}
                    <div class="col-md-4 col-sm-4  col-lg-3">
                        <div class="profile-widget">
                            <div class="doctor-img">
                                {% if medecin.gender == "homme" %}
                                    <a class="avatar" href="#"><img alt="" src="{{ asset('docteur.png') }}"></a>
                                {% else %}
                                     <a class="avatar" href="#"><img alt="" src="{{ asset('docteure.png') }}"></a>
                                {% endif %}

                            </div>
                            <div class="dropdown profile-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="{{ path('prendre_rdv', {'id': medecin.id}) }}">Prendre RDV</a>
                                </div>
                            </div>
                            <h4 class="doctor-name text-ellipsis"><a href="#">{{ medecin.firstName }} {{ medecin.lastName }}</a></h4>
                            <div class="doc-prof">{{ medecin.specialite }}</div>
                            <div class="user-country">
                                <i class="fa fa-map-marker"></i> {{ medecin.address }}, {{ medecin.ville }}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
{% endblock %}
